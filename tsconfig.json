{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "esnext",
            "dom"
        ],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "allowSyntheticDefaultImports": true
    },
    "compileOnSave": false,
    "include": [
        "./src/**/*",
        "./externals.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts"
    ],
    "types": [
        "typePatches"
    ]
}